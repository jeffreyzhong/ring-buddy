{
  "name": "halocall",
  "version": "1.0.0",
  "description": "Railway functions for AI voice agent webhook tool calls",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun run typecheck",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "postinstall": "prisma generate",
    "merchant:add": "bun run scripts/add-merchant.ts",
    "merchant:list": "bun run scripts/list-merchants.ts"
  },
  "dependencies": {
    "@clerk/backend": "^2.29.5",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "chrono-node": "^2.9.0",
    "dotenv": "^17.2.3",
    "fastest-levenshtein": "^1.0.16",
    "hono": "^4.6.0",
    "pg": "^8.17.2",
    "prisma": "^7.3.0",
    "square": "^43.2.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.16.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=22.12.0"
  }
}
